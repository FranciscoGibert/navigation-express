<!DOCTYPE html>
<html lang="en">
<head>
    <script src="/script/main.js" defer></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= contact %></title>
    <%- include('partials/stylesheet.ejs')%>

</head>
<body>
    <%- include('partials/navegation.ejs')%> 
    <div class="container mt-3">
        <div class="shadow p-3 mb-3 bg-body rounded"> 
            <h1>Contact</h1>
        </div>
    </div>


    <!-- action="http://localhost:3000/api" -->
<!-- contact form -->
    <div id="form" class="row gy-2 gx-3 align-items-center justify-content-center mt-3" >
        <div class="col-auto align-items-center">
          <label class="visually-hidden" for="autoSizingInput">Name</label>
          <input id="name" type="text" class="form-control" id="autoSizingInput" placeholder="franciscojoin2">
        </div>
        <div class="col-auto">
          <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
          <div class="input-group">
            <div class="input-group-text">@</div>
            <input id="surname" type="text" class="form-control" id="autoSizingInputGroup" placeholder="gmail.com">
          </div>
        </div>
       
        <div class="col-auto">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="autoSizingCheck">
            <label class="form-check-label" for="autoSizingCheck">
              Remember me
            </label>
          </div>
        </div>
        <div class="col-auto">
          <a href="/datos" id="enviar" type="submit" class="btn btn-primary">Submit</a>
        </div>
    </div>
    <!-- end contact form -->

    <div id="divContact" class="input-group mb-3 w-50 container mt-3">        
        <textarea id="text" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>

   
    
</body>
</html>